generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username    String   @unique
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Character {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  avatar      String
  personality String
  background  String
  expressions Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Scene {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  message   String
  choices   Json
  mood      String
  imageURL  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NFT {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sceneId         String
  imageUrl        String
  characterName   String
  walletAddress   String
  network         String   // "mainnet" or "testnet"
  metadata        Json
  transactionHash String?
  status          String   // "PENDING" or "MINTED"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
} 
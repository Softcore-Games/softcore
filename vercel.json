{
  "functions": {
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 120
    }
  },
  "regions": ["hkg1"],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
